{
  "version": 2,
  "functions": {
    "api/**/*.{js,ts}": {
      "runtime": "@vercel/node"
    }
  },
  "builds": [
    {
      "src": "api/**/*.{js,ts}",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}