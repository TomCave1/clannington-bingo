{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.{js,mjs}",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/pages",
      "destination": "/api/pages.mjs"
    },
    {
      "source": "/api/bingo/(.*)",
      "destination": "/api/bingo/[pageId].js"
    },
    {
      "source": "/api/hello",
      "destination": "/api/hello.mjs"
    },
    {
      "source": "/api/test",
      "destination": "/api/test.mjs"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}